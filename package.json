{
	"name": "vite-plugin-multiserver",
	"version": "0.3.1",
	"description": "A Vite plugin to launch multiple servers for the same app",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/vite-plugin-multiserver.git"
	},
	"keywords": [
		"vite-plugin",
		"vite-server",
		"server",
		"http-server"
	],
	"type": "module",
	"exports": "./dist/plugin.js",
	"types": "./dist/plugin.d.ts",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint:e18e": "e18e-cli analyze",
