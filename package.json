		"@playwright/test": "^1.57.0",
		"@types/node": "^24.9.1",
		"np": "^10.3.0",
		"playwright": "^1.57.0",
		"tsdown": "0.20.0-beta.4",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
