{
	"name": "vite-plugin-multiserver",
	"version": "0.3.1",
	"description": "A Vite plugin to launch multiple servers for the same app",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/vite-plugin-multiserver.git"
	},
	"keywords": [
		"vite-plugin",
		"vite-server",
		"server",
		"http-server"
	],
	"type": "module",
	"exports": "./dist/plugin.mjs",
	"types": "./dist/plugin.d.mts",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint:e18e": "e18e-cli analyze",
		"lint:code": "biome check",
		"lint": "concurrently --prefix '{name}' -c 'green,blue' 'npm:lint:*'",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --no-yarn --any-branch",
		"test": "concurrently --prefix '{name}' -c 'green,blue' 'npm:test:*'",
		"test:unit": "vitest run",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@idleberg/configs": "^0.4.1",
		"@playwright/test": "^1.57.0",
		"@types/node": "^24.9.1",
		"@vitest/coverage-v8": "4.0.17",
		"concurrently": "^9.2.1",
		"np": "^10.3.0",
		"playwright": "^1.57.0",
		"tsdown": "0.20.0-beta.4",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
	"packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48"
}
